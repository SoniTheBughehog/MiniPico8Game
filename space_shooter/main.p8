-- explosions

function create_explosions(_x,_y)
	add(explosions,{x=_x,
																	y=_y,
																	timer=0
																}
															)
	sfx(1)
end

function update_explosions()
	for e in all(explosions) do
		if (e.timer > 12) del(explosions,e)
		e.timer+=1
	end
end

function draw_explosions()
	for e in all(explosions) do
		circ(e.x,e.y,e.timer/3,
							8+e.timer%3)
	end
end
