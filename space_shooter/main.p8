--bullets

function shoot()
	new_bullet={
		x=p.x,
		y=p.y,
		speed=3
	}
	add(bullets,new_bullet)
	sfx(0)
end

function update_bullets()
	for b in all(bullets) do
		b.y-=b.speed
	end
end

